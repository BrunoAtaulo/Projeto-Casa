@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1 class="fonte-clara">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="fonte-clara">Criar uma nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="fonte-clara" asp-for="Input.Email">E-mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="fonte-clara" asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="fonte-clara" asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="fonte-clara" asp-for="Input.NomeCompleto">Nome Completo</label>
                <input asp-for="Input.NomeCompleto" class="form-control" required/>
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>
            
            @* Inserir Adm *@
            <div class="form-group">
                <label class="fonte-clara" asp-for="Input.Adm">Adm: </label>
                <input asp-for="Input.Adm" class="form-control" />
                <span asp-validation-for="Input.Adm" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
