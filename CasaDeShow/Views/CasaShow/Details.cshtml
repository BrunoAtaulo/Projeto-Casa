@model CasaDeShow.Models.Casadeshow

@{
    ViewData["Title"] = "Detalhes";
}

<div class="row">
    <div class="col-md-12">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header"><h1 style="text-align: center">Detalhes - Casa de show</h1></div>
                <div class="card-body">
                    <h4 class="card-title">
<div class="form-group">
<label class="fonte-clara" class="control-label">@Html.DisplayNameFor(model => model.Nome):</label>
@Html.DisplayFor(model => model.Nome)
</div>
<div class="form-group">
<label class="fonte-clara" class="control-label">@Html.DisplayNameFor(model => model.Endereco):</label>
@Html.DisplayFor(model => model.Endereco)
</div>
    <div>
        <a class="badge badge-secondary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a class="badge badge-primary" asp-action="Index">Voltar para a lista</a>
    </div>
</div>
</div>
</div>